<% if obj.errors.any? %>
  <h4>There are some problem need do be fix</h4>
  <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="xs-col-12">
    <%= form_for(obj, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :title, "Title" %>
        </div>
        <div class="col-xs-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true  %>
        </div>
      </div>
   
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :description, "description" %>
        </div>
        <div class="col-xs-8">
          <%= f.text_area :description ,rows: 10, class: "form-control", placeholder: "article content", autofocus: true%>
        </div>
      </div>
      <div class="form-group">    
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>

    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to "Cancel request and return to Article index", articles_path %>]
    </div>
  </div>
</div>
